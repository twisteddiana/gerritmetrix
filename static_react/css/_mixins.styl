remove-symbol()
  text-indent 100%
  display inline-block
  overflow hidden
  vertical-align middle
  text-decoration none
  color inherit
  font-weight bold
  width 2em
  white-space nowrap
  &::before
    content 'X'
    text-indent 0px
    border 1px solid #ccc
    border-radius 100%
    width 1em
    height 1em
    padding 2px
    text-align center
    background-color #333
    color white
    float left

then-clear-both()
  &::after
    clear both
    content "\00a0"
    font-size 0px

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both


border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

linear-gradient-builder(origin, colors...)
  colors = join(', ', colors)
  colors = unquote(colors)

  background-image: -webkit-linear-gradient(origin, colors);
  background-image: -moz-linear-gradient(origin, colors);
  background-image: -o-linear-gradient(origin, colors);
  background-image: -ms-linear-gradient(origin, colors);
  background-image: linear-gradient(origin, colors);

transform(args...)
  -moz-transform args
  -webkit-transform args
  -o-transform args
  -khtml-transform args